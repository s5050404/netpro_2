    private void getpageActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        try{
            show1.setPage(url1.getText());
            thread.setText("Thread-1 : Start Get Page \n");
            
            thread.setText(thread.getText()+"Thread-1 : Print HTTP Header\n");		
            PrintHeader(url1.getText(), "Thread-1 : ");
            
            thread.setText(thread.getText()+"Thread-1 : Get Complete\n");
            
            show2.setPage(url2.getText());
            thread.setText(thread.getText()+"Thread-2 : Start Get Page\n");
            
            thread.setText(thread.getText()+"Thread-2 : Print HTTP Header\n");				
            PrintHeader(url2.getText(), "Thread-2 : ");
            						
            thread.setText(thread.getText()+"Thread-2 : Get Complete\n");
        }
        catch(Exception e){
            System.out.println("GetPage Error");
        }
    }                                       

    private void url2ActionPerformed(java.awt.event.ActionEvent evt) {                                     
        // TODO add your handling code here:
    }                                    

    private void PrintHeader(String url, String thread) {
		
        try {
			 
            URL obj = new URL(url);
            URLConnection conn = obj.openConnection();
            Map<String, List<String>> map = conn.getHeaderFields();
            header.setText(header.getText()+"Get HTTP Header From "+thread+"\n\n"); 
            
            for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                header.setText(header.getText()+"Status : "+entry.getKey()+" ,Value : "+entry.getValue()+"\n");
            }
           
            String server = conn.getHeaderField("Server");
		 
            if (server == null) {
		header.setText(header.getText()+"'Server' is not found!\n");
            } 
            else {
                header.setText(header.getText()+"Server : " + server+"\n");
            }
            header.setText(header.getText()+"*******************************************************************\n\n");
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
